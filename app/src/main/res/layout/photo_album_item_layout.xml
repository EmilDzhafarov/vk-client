<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/image_view_cover_photo_album"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <LinearLayout
        android:id="@+id/linear_layout_count_of_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="4dp"
        android:layout_alignTop="@id/image_view_cover_photo_album"
        android:layout_alignEnd="@id/image_view_cover_photo_album"
        android:orientation="horizontal">
        
        <ImageView
            android:layout_width="16dp"
            android:layout_height="15dp"
            android:src="@drawable/camera"/>
        
        <TextView
            android:id="@+id/text_view_count_of_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:gravity="center_vertical"
            android:text="1000"/>
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/text_view_title_photo_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="center"
        android:layout_alignBottom="@id/image_view_cover_photo_album"
        android:text="Hello"
        android:textColor="#FFFFFF" />

</RelativeLayout>